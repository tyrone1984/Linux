/**index.wxss**/

.botom-search {
  width: 100%;
  position: fixed;
  bottom: 0px;
}

.no-device {
  color: #999;
  font-size: 15px;
}

.device-item {
  border-bottom: #ddd 1px solid;
  width: 100%;
}

.device-name {
  padding: 8px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
